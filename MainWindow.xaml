        </Menu>
        -->
        <StatusBar Height="24" DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="lblOpenFilePath" />
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Ribbon x:Name="RibbonWin" SelectedIndex="0">
                <!-- Help Pane, located at the right-hand side -->
                <Ribbon.HelpPaneContent>
                    <RibbonButton SmallImageSource="Images\help.png" />
                </Ribbon.HelpPaneContent>
                <!-- Quick Access Toolbar - located at the upper-left corner -->
                <Ribbon.QuickAccessToolBar>
                    <RibbonQuickAccessToolBar>
                        <RibbonButton x:Name ="Save" SmallImageSource="Images\save.png" />
                        <RibbonSplitButton x:Name ="Undo" SmallImageSource="Images\undo.png">
                            <RibbonSplitMenuItem Header="Undo 1" />
                            <RibbonSplitMenuItem Header="Undo 2" />
                            <RibbonSplitMenuItem Header="Undo 3" />
                        </RibbonSplitButton>
                        <RibbonSplitButton x:Name="Redo" SmallImageSource="Images\redo.png" >
                            <RibbonSplitMenuItem Header="Redo 1" />
                            <RibbonSplitMenuItem Header="Redo 2" />
                        </RibbonSplitButton>
                    </RibbonQuickAccessToolBar>
                </Ribbon.QuickAccessToolBar>
                <!-- Application Menu, located at the left-hand side (down arrow) -->
                <Ribbon.ApplicationMenu>
                    <RibbonApplicationMenu KeyTip="F">
                        <RibbonApplicationMenuItem Header="Options" ImageSource="Images\options.png" />
                        <RibbonApplicationMenuItem Header="Exit" ImageSource="Images\quit.png" />
                    </RibbonApplicationMenu>
                </Ribbon.ApplicationMenu>

                <!-- Ribbon Tab #1: Home -->
                <RibbonTab Header="Registry" KeyTip="H" >
                    <!-- Client group-->
                    <RibbonGroup x:Name="ClientRegistryGroup" Header="Client">
                        <RibbonMenuButton LargeImageSource="Images\file_blanc_plus.png" Label="Client Registry" KeyTip="R">
                            <RibbonMenuItem Click="RibbonMenuItem_ClientRegistry_Click" ImageSource="Images\add.png" Header="Add..." KeyTip="T"/>
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <!-- Animal  group-->
                    <RibbonGroup x:Name="AnimalRegistryGroup" Header="Animal">
                        <RibbonMenuButton LargeImageSource="Images\file_blanc_plus.png" Label="Animal Registry" KeyTip="R">

                            <RibbonMenuItem Click="RibbonMenuItem_AnimalRegistry_Click" ImageSource="Images\add.png" Header="Add..." KeyTip="T"/>
                            <RibbonMenuItem ImageSource="Images\paste.png" Header="Paste Special..." KeyTip="S"/>

                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                        <!--
                        <RibbonButton SmallImageSource="Images\cut.png" Label="Cut" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\copy.png" Label="Copy" KeyTip="C" />
                        -->
                    </RibbonGroup>
                    
                    <!-- Employee group-->
                    <RibbonGroup x:Name="VeterinarianRegistryGroup" Header="Veterinarian">
                        <RibbonMenuButton LargeImageSource="Images\veterinarian.png" Label="Veterinarian Registry" KeyTip="V">
                            <RibbonMenuItem ImageSource="Images\paste.png" Header="Keep Text Only" KeyTip="T"/>
                            <RibbonMenuItem ImageSource="Images\paste.png" Header="Paste Special..." KeyTip="S"/>
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                </RibbonTab>

                <!-- Ribbon Tab #2: SCHEDULING-->
                <RibbonTab Header="Scheduling" KeyTip="I">
                    <RibbonGroup x:Name="ServiceSchedulingGroup" Header="Scheduling">
                        <RibbonMenuButton LargeImageSource="Images\file_blanc_plus.png" Label="Service Scheduling" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <RibbonGroup x:Name="SetCalendarSchedulesGroup" Header="Set Calendar">
                        <RibbonMenuButton LargeImageSource="Images\file_blanc_plus.png" Label="Set Calendar Schedules" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                </RibbonTab>

                <!-- Ribbon Tab #3: SERVICE-->
                <RibbonTab Header="Service" KeyTip="L">
                    <RibbonGroup x:Name="ServiceMenuGroup" Header="Service">
                        <RibbonMenuButton LargeImageSource="Images\hospital-1.png" Label="Service Menu" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <RibbonGroup x:Name="PrintPrescriptionGroup" Header="Prescription">
                        <RibbonMenuButton LargeImageSource="Images\print.png" Label="Print Prescription" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <RibbonGroup x:Name="SearchServiceGroup" Header="Search">
                        <RibbonMenuButton LargeImageSource="Images\search.png" Label="Search Service" KeyTip="R">
                            <RibbonMenuItem ImageSource="Images\search.png" Header="All" KeyTip="T"/>
                            <RibbonMenuItem ImageSource="Images\search.png" Header="Pending" KeyTip="S"/>
                            <RibbonMenuItem ImageSource="Images\search.png" Header="Canceled" KeyTip="S"/>
                            <RibbonMenuItem ImageSource="Images\search.png" Header="Ended" KeyTip="S"/>
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                </RibbonTab>
                <!-- Ribbon Tab #4: TABLES-->
                <RibbonTab Header="Tables" KeyTip="L">
                    <RibbonGroup x:Name="RegisterSpeciesGroup" Header="Species">
                        <RibbonMenuButton LargeImageSource="Images\file_blanc_plus.png" Label="Register Species" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <RibbonGroup x:Name="RegisterBreedsGroup" Header="Breeds">
                        <RibbonMenuButton LargeImageSource="Images\file_blanc_plus.png" Label="Register Breeds" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <RibbonGroup x:Name="RegisterVaccinationsGroup" Header="Vaccinations">
                        <RibbonMenuButton LargeImageSource="Images\syringe.png" Label="Register Vaccinations" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <RibbonGroup x:Name="RegistrationProceduresGroup" Header="Procedures">
                        <RibbonMenuButton LargeImageSource="Images\test-tube.png" Label="Register  of Procedures" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                    <RibbonGroup x:Name="RegistrationServiceStatusGroup" Header="Service Status">
                        <RibbonMenuButton LargeImageSource="Images\report-1.png" Label="Registration of Service Status" KeyTip="R">
                        </RibbonMenuButton>
                        <RibbonButton SmallImageSource="Images\save.png" Label="Save" KeyTip="X" />
                        <RibbonButton SmallImageSource="Images\add.png" Label="Add" KeyTip="C" />
                    </RibbonGroup>
                </RibbonTab>
            </Ribbon>


        </Grid>
    </DockPanel>



</Window>
