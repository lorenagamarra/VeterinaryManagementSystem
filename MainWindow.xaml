<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VeterinaryManagementSystem"
        x:Class="VeterinaryManagementSystem.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <DockPanel>
        <!--   
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Registry">
                <MenuItem Header="_1 - Animal Registry"/>
                <MenuItem Header="_2 - Client Registry"/>
                <Separator/>
                <MenuItem Header="_3 - Veterinarian Registry"/>
            </MenuItem>
            <MenuItem Header="_Scheduling">
                <MenuItem Header="_1 - Service Scheduling"/>
                <MenuItem Header="_2 - Set Calendar Schedules"/>
            </MenuItem>
            <MenuItem Header="S_ervice">
                <MenuItem Header="_1 - Service Menu"/>
                <MenuItem Header="_2 - Print Prescription"/>
                <MenuItem Header="_3 - Search Service"/>
            </MenuItem>
            <MenuItem Header="_Tables">
                <MenuItem Header="_1 - Register Species"/>
                <MenuItem Header="_2 - Register Breeds"/>
                <Separator/>
                <MenuItem Header="_3 - Register Vaccinations"/>
                <Separator/>
                <MenuItem Header="_4 - Registration of Procedures"/>
                <Separator/>
